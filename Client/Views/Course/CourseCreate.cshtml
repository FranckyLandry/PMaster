                @Html.TextBoxFor(model => model.Course.CourseName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Course.PcnNumber, new { @class = "col-md-2 control-label" })
