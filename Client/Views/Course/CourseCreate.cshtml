<!DOCTYPE html>


<body>



    @*<h2>@ViewBag.Title.</h2>*@

    @using (Html.BeginForm(Html.BeginForm("Create", "Course", FormMethod.Post, new { @class = "form-horizontal", role = "form" })))
    {


        @*@Html.AntiForgeryToken()*@

        <hr />
        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
        <div class="form-group">
            @Html.LabelFor(model => model.Course.CourseName, new { @class = "col-md-2 control-label" })
